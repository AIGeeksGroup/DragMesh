  ],

  "val_in_category": {
    "_comment": "In-category validation: 20% of samples from each training category",
    "enabled": true,
    "split_ratio": 0.2,
    "stratify_by_joint_type": true,
    "random_seed": 42
  },

  "val_cross_category": {
    "_comment": "Cross-category validation: completely unseen categories for zero-shot testing",
    "categories": [
      "Laptop",
      "Bucket",
      "Keyboard",
      "Oven"
    ]
  },

  "motion_type_balance": {
    "_comment": "Balance revolute and prismatic samples during training",
    "enabled": true,
    "method": "weighted_sampling",
    "target_ratio": 3.0,
    "_target_ratio_note": "Target Revolute:Prismatic = 3:1 (more balanced than 18:1)",
    "oversample_minority": true
  },

